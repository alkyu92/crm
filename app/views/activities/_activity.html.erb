<div class="row">
    <div class="col-lg-1">
      <%= activity.id %>
    </div>
    <div class="col-lg-3">
        <!-- Name -->
        <%= link_to activity.subject, '#',data: {toggle: "modal", target: "#activityModalShow"} %>
    </div>
    <div class="col-lg-2">
        <!-- Due Date -->
        <% if activity.due_date.blank? %>
        <p style="color: red;">Due date not specified</p>
        <% else %>
        <%= activity.due_date.strftime('%d %b %Y') %>
        <% if activity.due_date.to_date == DateTime.now.to_date %>
        (Today)
        <% else %>
        (<%= distance_of_time_in_words(Time.now, activity.due_date)%> left)
        <% end %>
        <% end %>
    </div>
    <div class="col-lg-2">
        <!-- Priority -->
        <% if activity.priority_id == 1 %>
          <p>Normal</p>
        <% elsif activity.priority_id == 2 %>
          <p style="color: red;">High</p>
        <% end %>
    </div>
    <div class="col-lg-2">
      <!-- Status -->
      <% if activity.status_id == 1 %>
        <p style="color: red;">Open</p>
      <% elsif activity.status_id == 2 %>
        <p style="color: green;">Closed</p>
      <% end %>
    </div>
    <div class="col-lg-2">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="caret"></i>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to 'Show', '#', data: {toggle: "modal", target: "#activityModalShow"} %></li>
        <li><%= link_to 'Change Status', '#' %></li>
        <li><%= link_to 'Change Priority', '#' %></li>
        <li><%= link_to 'Edit', '#', data: {toggle: "modal", target: "#activityModalForm"} %></li>
        <li><%= link_to 'Delete', activity_path(activity), method: :delete,
        data: {confirm: "Are you sure?"} %></li>
      </ul>
    </div>
</div>
