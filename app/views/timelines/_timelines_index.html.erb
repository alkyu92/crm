<h4>Opportunity Timeline &middot History</h4>
<% op = @opportunity.timelines.order('created_at DESC').includes(:user).page(params[:page]).per(5) %>
<% if op.blank? %>
<p>Every changes regarding opportunities will be recorded here.</p>
<% else %>

<% op.each do |timeline| %>
<div class="panel panel-default panel-body">
    <div class="media">
        <div class="media-left" style="padding-top: 6px;">
            <%= image_tag('http://placehold.it/25x25', class: "media-object")%>
        </div>
        <div class="media-body">
            <small>
                <%= link_to timeline.user.name, user_path(timeline.user.id) %>
                <%= timeline.action %>
                <strong><%= link_to timeline.nactivity.truncate(50),
                opportunity_path(timeline.opportunity) %></strong>
                <div class="pull-right">
                    <%= link_to opportunity_timeline_path(@opportunity, timeline),
                method: :delete, remote: true do %>
                    <i class="fa fa-times"></i>
                    <% end %>
                </div>
            </small>
            <h5 style="margin-top: -2px;">
                <small>
                    <%= timeline.created_at.strftime('%d %b %Y') %>
                    &middot
                    <%= time_ago_in_words(timeline.created_at) %>
                    ago
                </small>

                <h5></div>
            </div>
        </div>
        <% end %>
        <div class="text-center" id="paginator">
            <%= page_entries_info op %><br>
            <%= paginate op, remote: true %>
        </div>
        <% end %>
