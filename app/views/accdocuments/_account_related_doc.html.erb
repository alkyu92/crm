<div class="tab-pane fade in" id="accountDocs">
    <h4>Account Related Documents</h4>

    <div class="panel panel-default panel-body">
        <%= simple_form_for @account, html: {multipart: true}, remote: true do |f| %>
        <%= f.input :website, as: :hidden %>
        <%= f.label "Upload Documents" %>
        <%= file_field_tag "accdocs[]",type: :file, multiple: true %>
        <%= f.hint "Only pdf/doc" %>
        <%= f.button :submit, "Submit Documents" %>
        <% end %>
    </div>

    <div id="doc">
        <%= render 'accdocuments/account_doc' %>
    </div>

</div>
