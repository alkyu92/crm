<div class="tab-pane fade in" id="relatedDocs">
    <h4>Related Documents</h4>
    <% @subject = Account.find(params[:id]) if params[:controller] == "accounts" %>
    <% @subject = Opportunity.find(params[:id]) if params[:controller] == "opportunities" %>

    <div class="panel panel-default panel-body">
        <%= simple_form_for @subject, html: {multipart: true}, remote: true do |f| %>
        <!-- dummy for the sake of saving the file -->
        <%= f.input :dummy, as: :hidden %>

        <%= f.label "Upload Documents" %>
        <%= file_field_tag "docs[]",type: :file, multiple: true %>
        <%= f.hint "Can upload multiple files." %>
        <%= f.hint "Support pdf and all type of images file" %>
        <%= f.button :submit, "Submit Documents" %>
        <% end %>
    </div>

    <div id="doc">
        <%= render 'documents/doc' %>
    </div>

</div>
