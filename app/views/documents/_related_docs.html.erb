<div class="tab-pane fade in" id="opportunityDocs">
    <h4>Opportunity Related Documents</h4>

    <div class="panel panel-default panel-body">
        <%= simple_form_for @opportunity, html: {multipart: true}, remote: true do |f| %>
        <%= f.input :name, as: :hidden %>
        <%= f.label "Upload Documents" %>
        <%= file_field_tag "docs[]",type: :file, multiple: true %>
        <%= f.hint "Can upload multiple files. Only pdf/doc type"%>
        <%= f.button :submit, "Submit Documents" %>
        <% end %>
    </div>

    <div id="doc">
        <%= render 'documents/doc' %>
    </div>

</div>
