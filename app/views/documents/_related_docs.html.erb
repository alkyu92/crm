<div class="tab-pane fade in" id="opportunityDocs">
    <h4>Opportunity Related Documents</h4>

    <div class="panel panel-default panel-body">
        <%= simple_form_for @opportunity, html: {multipart: true} do |f| %>
        <%= f.input :name, as: :hidden %>
        <%= f.label "Upload Documents" %>
        <%= file_field_tag "docs[]",type: :file, multiple: true %>
        <%= f.hint "Can upload multiple files"%>
        <%= f.button :submit, "Submit Documents" %>
        <% end %>
    </div>

    <div class="row">
        <% if @opportunity.documents.blank? %>
        <div class="col-lg-12">
            <p>There are no documents uploaded yet.</p>
        </div>
    <% else %>

        <% @opportunity.documents.each_with_index do |document, index| %>
        <% if (index+1) % 4 == 0 %>
        <div class="row">
            <% end %>

            <div class="col-lg-3 text-center">
                <br>
                <a href="#" data-toggle="modal" data-target="#modal-agreement">
                    <%= image_tag(document.doc.url(:thumb), class: "img-responsive img-center") %>
                </a>
            </div>

            <% if (index+1) % 4 == 0 %>
        </div>
        <% end %>
        
        <div class="modal fade" id="modal-agreement">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <object type="application/pdf" data="<%= document.doc.url%>" width="100%" height="500" style="height: 85vh;">No Support</object>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
        <% end %>

        <% end %>
    </div>

</div>
