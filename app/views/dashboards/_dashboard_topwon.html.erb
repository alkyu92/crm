<div class="panel panel-default panel-body">
    <h4><strong>Top Accounts - Opportunity Closed-Won</strong></h4>
    <hr>
    <% if @opwon.blank? %>
    No Closed-Won opportunities found.
    <% else %>
    <div class="row">
      <div class="col-lg-4 col-xs-4">
        <small>Account Name</small>
      </div>
      <div class="col-lg-4 col-xs-4">
        <small>Opportunity Name</small>
      </div>
      <div class="col-lg-4 col-xs-4">
        <small>Amount in RM</small>
      </div>
    </div>
      <% @opwon.take(6).each do |won| %>
      <div class="row">
        <div class="col-lg-4 col-xs-4">
          <%#= link_to won.account.name, account_path(won.account) %>
          <%= link_to won[0], account_path(won[1]) %>
        </div>
        <div class="col-lg-4 col-xs-4">
          <%#= link_to won.name, opportunity_path(won) %>
          <%= link_to won[2], opportunity_path(won[3]) %>
        </div>
        <div class="col-lg-4 col-xs-4">
          <%= sprintf('%.2f' % won[4]) %>
        </div>
      </div>
      <% end %>

      <% if @opwon.count >= 6 %>
      <hr>
      <div class="row">
          <div class="col-lg-12 text-center">
              <h5><%= link_to 'View All Closed-Won Opportunities',
              opportunities_path(status: "Closed-Won", type: "Opportunity") %></h5>
          </div>
      </div>
      <% end %>

    <% end %>
</div>
