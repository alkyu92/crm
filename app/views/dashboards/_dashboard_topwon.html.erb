<div class="panel panel-default panel-body">
    <h4><strong>Top Accounts - Opportunity Won</strong></h4>
    <hr>
    <% if @opwon.blank? %>
    There are no opportunities won yet.
    <% else %>
    <div class="row">
      <div class="col-lg-4">
        <small>Account Name</small>
      </div>
      <div class="col-lg-4">
        <small>Opportunity Name</small>
      </div>
      <div class="col-lg-4">
        <small>Closed-Won at</small>
      </div>
    </div>
      <% @opwon.take(6).each do |won| %>
      <div class="row">
        <div class="col-lg-4">
          <%= link_to won.account.account_name, account_path(won.account) %>
        </div>
        <div class="col-lg-4">
          <%= link_to won.name, opportunity_path(won) %>
        </div>
        <div class="col-lg-4">
          <%= won.close_date.strftime('%d %b %Y') %>
        </div>
      </div>
      <% end %>

      <% if @opwon.count >= 6 %>
      <hr>
      <div class="row">
          <div class="col-lg-12 text-center">
              <h5><%= link_to 'View All Closed-Won Opportunities',
              opportunities_path(status: "Closed-Won", type: "Opportunity") %></h5>
          </div>
      </div>
      <% end %>

    <% end %>
</div>
