<% if @calls.blank? %>
No calls yet.
<% else %>

<h5>Latest Calls</h5>
<div class="row">
    <div class="col-lg-6">
        <small>Calls</small>
    </div>
    <div class="col-lg-6">
        <small>Call Datetime</small>
    </div>
</div>

<% @calls.each do |call| %>
<div class="row">
    <div class="col-lg-6"><%= link_to call.description.truncate(25),
  opportunity_path(call.opportunity.id, anchor: "call-callInfo-#{call.id}") %></div>
    <% if call.call_datetime.blank? %>
    <div class="col-lg-6">
        <span style="color: red;">Not specified</span>
    </div>
<% else %>
    <div class="col-lg-6"><%= call.call_datetime.strftime('%d %b %Y %H:%M:%S')%></div>
    <% end %>
</div>
<% end %>

<% end %>

<% if @calls.count == 6 %>
<hr>
<div class="row">
    <div class="col-lg-12 text-center">
        <h5><%= link_to 'View All Calls', calls_path %></h5>
    </div>
</div>
<% end %>
