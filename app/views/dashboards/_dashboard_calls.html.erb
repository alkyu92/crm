<div class="panel panel-default panel-body">
<h4><strong>Latest Calls Registered</strong></h4>
<hr>
<% if @calls.blank? %>
No calls found.
<% else %>

<div class="row">
    <div class="col-lg-6 col-xs-6">
        <small>Calls</small>
    </div>
    <div class="col-lg-6 col-xs-6">
        <small>Call Datetime</small>
    </div>
</div>

<% @calls.each do |call| %>
<div class="row">
    <div class="col-lg-6 col-xs-6"><%= link_to call[1].truncate(25),
  opportunity_path(call[3], anchor: "call-callInfo-#{call[0]}") %></div>
    <% if call[2].blank? %>
    <div class="col-lg-6 col-xs-6">
        <span style="color: red;">Not specified</span>
    </div>
<% else %>
    <div class="col-lg-6 col-xs-6"><%= call[2].strftime('%d %b %Y %H:%M:%S')%></div>
    <% end %>
</div>
<% end %>

<% end %>

<% if @calls.count >= 6 %>
<hr>
<div class="row">
    <div class="col-lg-12 text-center">
        <h5><%= link_to 'View All Calls', calls_path %></h5>
    </div>
</div>
<% end %>
</div>
