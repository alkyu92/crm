<div class="panel panel-default panel-body">
<h4><strong>Latest Cases Registered</strong></h4>
<hr>
<% if @cases.blank? %>
No cases registered yet.
<% else %>
<div class="row">
    <div class="col-lg-6">
        <small>Case Name</small>
    </div>
    <div class="col-lg-6">
        <small>Created at DateTime</small>
    </div>
</div>
<% @cases.take(6).each do |cs| %>
<div class="row">
    <div class="col-lg-6">
        <%= link_to cs.name, opportunity_path(cs) %>
    </div>
    <div class="col-lg-6">
        <%= cs.created_at.strftime('%d %b %Y %H:%M:%S')%>
    </div>
</div>
<% end %>
<% end %>

<% if @cases.count >= 6 %>
<hr>
<h5 class="text-center"><%= link_to 'View All Cases',
opportunities_path(type: "Case") %></h5>
<% end %>
</div>
