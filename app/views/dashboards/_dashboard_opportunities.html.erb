<h5>Latest Opportunities</h5>
<hr>
<% if @opportunities.blank? %>
No opportunities registered yet.
<% else %>
<div class="row">
    <div class="col-lg-6">
        <small>Opportunity Name</small>
    </div>
    <div class="col-lg-6">
        <small>Created at DateTime</small>
    </div>
</div>
<% @opportunities.take(6).each do |op| %>
<div class="row">
    <div class="col-lg-6">
        <%= link_to op.name, opportunity_path(op) %>
    </div>
    <div class="col-lg-6">
        <%= op.created_at.strftime('%d %b %Y %H:%M:%S')%>
    </div>
</div>
<% end %>
<% end %>

<% if @opportunities.count >= 6 %>
<hr>
<h5 class="text-center"><%= link_to 'View All Opportunities',
opportunities_path(type: "Opportunity") %></h5>
<% end %>
