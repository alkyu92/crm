<h5>Latest Opportunities / Cases</h5>
<% if @opportunities.blank? %>
No opportunities / cases registered yet.
<% else %>
<div class="row">
    <div class="col-lg-6">
        <small>Opportunity / Case Name</small>
    </div>
    <div class="col-lg-6">
        <small>Created at DateTime</small>
    </div>
</div>
<% @opportunities.each do |op| %>
<div class="row">
    <div class="col-lg-6">
        <%= link_to op.name, opportunity_path(op) %>
    </div>
    <div class="col-lg-6">
        <%= op.created_at.strftime('%d %b %Y %H:%M:%S')%>
    </div>
</div>
<% end %>
<% end %>
<hr>
<h5 class="text-center"><%= link_to 'View All Opportunities / Cases', opportunities_path %></h5>
