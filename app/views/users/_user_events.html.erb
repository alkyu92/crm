<h4>Events</h4>
<hr>

<% if @events.blank? %>
No events yet.
<% else %>
<div class="row">
    <div class="col-lg-6">
        <strong>Description</strong>
    </div>
    <div class="col-lg-6">
        <strong>Due Date</strong>
    </div>
</div>

<% @events.each do |event| %>
<div class="row">
    <div class="col-lg-6">
        <%= link_to event.description.truncate(25),
        opportunity_path(event.opportunity, anchor: "event-#{event.id}") %>
    </div>
    <div class="col-lg-6">
        <% if event.event_date.blank? %>
        <span style="color: red;">Date not specified</span>
    <% else %>
        <%= event.event_date.strftime('%d %b %Y') %>
        <% end %>
    </div>
</div>
<% end %>
<br>
<div class="text-center">
<%= paginate @events, param_name: :page_event, remote: true %>
</div>
<% end %>
