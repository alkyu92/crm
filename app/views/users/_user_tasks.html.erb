<h4>Tasks</h4>
<hr>
<% tasks = @user.tasks.page(params[:page_task]).per(5) %>
<% if tasks.blank? %>
No tasks yet.
<% else %>
<div class="row">
    <div class="col-lg-6">
        <strong>Description</strong>
    </div>
    <div class="col-lg-6">
        <strong>Due Date</strong>
    </div>
</div>

<% tasks.each do |task| %>
<div class="row">
    <div class="col-lg-6">
        <%= link_to task.description, opportunity_path(task.opportunity, anchor: "task-#{task.id}") %>
    </div>
    <div class="col-lg-6">
        <% if task.due_date.blank? %>
        <span style="color: red;">Date not specified</span>
    <% else %>
        <%= task.due_date.strftime('%d %b %Y') %>
        <% end %>
    </div>
</div>
<% end %>
<br>
<div class="text-center">
<%= paginate tasks, param_name: :page_task, remote: true %>
</div>
<% end %>
