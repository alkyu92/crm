<hr>
<div class="row">
    <div class="col-lg-1 text-center">
        <%= user.id %>
    </div>
    <div class="col-lg-3">
        <!-- Name -->
        <%= link_to user.name, user_path(user) %>
    </div>
    <div class="col-lg-3">
        <!-- Phone -->
        <% if user.phone.blank? %>
        <span style="color: red;">
            Phone not specified
        </span>
    <% else %>
        <%= user.phone %>
        <% end %>
    </div>
    <div class="col-lg-3">
        <!-- Email -->
        <% if user.email.blank? %>
        <span style="color: red;">
            Email not specified
        </span>
    <% else %>
        <%= user.email %>
        <% end %>
    </div>
    <div class="col-lg-2">
        <div class="dropdown">
            <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
                <i class="caret"></i>
            </a>
            <ul class="dropdown-menu">
                <li><%= link_to 'Show', user_path(user) %></li>
            </ul>
        </div>
    </div>
</div>
