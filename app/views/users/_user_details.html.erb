<div class="tab-pane fade in" id="userDetails">
    <br>
    <h4>User Details</h4>
    <hr>

    <div class="row">
        <div class="col-lg-1">
            <i class="fa fa-envelope"></i>
        </div>
        <div class="col-lg-11">
            <% if @user.email.blank? %>
            <%= link_to edit_user_registration_path do %>
            <i class="fa fa-pencil"></i>
            Edit
            <% end %>
        <% else %>
            <%= @user.email %>
            <% end %>
        </div>
    </div>

