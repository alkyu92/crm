
<br>
<h4>Accounts Registered</h4>
<hr>
<% if @useracc.blank? %>
No accounts found.
<%= link_to 'Create new account', accounts_path(anchor: "accountModalForm") %>.
<% else %>

<div class="row">
    <div class="col-lg-6">
        <strong>Account Name</strong>
    </div>
    <div class="col-lg-6">
        <strong>Created at DateTime</strong>
    </div>
</div>
<% @useracc.each do |acc| %>
<div class="row">
    <div class="col-lg-6">
        <%= link_to acc.account_name, account_path(acc) %>
    </div>
    <div class="col-lg-6">
        <%= acc.created_at.strftime('%d %b %Y %H:%M:%S') %>
    </div>
</div>
<% end %>
<div class="text-center">
    <%= paginate @useracc, param_name: :page_acc, remote: true %>
</div>
<% end %>
