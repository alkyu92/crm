<div class="tab-pane fade in" id="accountNotes">
    <h4>Account Notes</h4>
    <div class="panel panel-default panel-body">
        <%= simple_form_for [@account, @accnote, Accnote.new], remote: true do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.button :submit, "Create Note" %>
        <% end %>
    </div>
    <br>

    <div class="accnote">
      <%= render 'accnotes/account_note' %>
    </div>

    <% if @account.accnotes.blank? %>
    No notes found.
    <% else %>
      <% @account.accnotes.each do |accnote| %>
      <!-- Modal -->
      <div id="note-<%= accnote.id %>" class="modal fade" role="dialog">
          <div class="modal-dialog">

              <!-- Modal content-->
              <div class="modal-content">
                  <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">Edit Note</h4>
                  </div>
                  <div class="modal-body">
                      <%= simple_form_for [@account, accnote],remote: true do |f| %>
                      <%= f.input :title %>
                      <%= f.input :description %>
                  </div>
                  <div class="modal-footer">
                      <%= f.button :submit, "Update Note",class: "btn btn-success" %>
                      <% end %>
                      <%= link_to 'Cancel', '#', class: "btn btn-default", data: {dismiss: "modal"} %>
                  </div>
              </div>
          </div>
      </div>

      <!-- Modal -->
      <div id="accnoteInfo-<%= accnote.id %>" class="modal fade" role="dialog">
          <div class="modal-dialog">

              <!-- Modal content-->
              <div class="modal-content">
                  <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">
                          <small>Note</small>
                          <br>
                          <%= accnote.title %>
                          <br>
                          <small>
                            Created by
                          <%= accnote.user.name %>
                          &middot
                          <%= time_ago_in_words(accnote.created_at) %>
                          ago
                          </small>
                      </h4>
                  </div>
                  <div class="modal-body">
                      <%= simple_format h(accnote.description) %>
                  </div>
                  <div class="modal-footer">

                      <%= link_to 'Close', '#', class: "btn btn-default", data: {dismiss: "modal"}%>
                  </div>
              </div>
          </div>
      </div>
      <% end %>
    <% end %>
</div>
