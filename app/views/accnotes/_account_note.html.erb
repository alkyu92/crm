<h4>Notes</h4>
<div id="notice-accnote"></div>
<% if @account.accnotes.blank? %>
No notes submitted yet.
<% else %>
<div class="row">
    <% @account.accnotes.each do |accnote| %>
    <div class="col-lg-6 panel panel-body">
        <%= link_to accnote.title.truncate(40), '#',
        data: {toggle: "modal", target: "#accnoteInfo-#{accnote.id}"} %>
        <h5><small>
          Created
          <%= time_ago_in_words(accnote.created_at) %>
          ago
        </small></h5>
        <div class="pull-right">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="caret"></i>
            </a>
            <ul class="dropdown-menu">
                <li><%= link_to 'Edit', '#',
              data: {toggle: "modal", target: "#note-#{accnote.id}"} %></li>
                <li><%= link_to 'Delete',
              account_accnote_path(@account, accnote), method: :delete, remote: true %></li>
            </ul>
        </div>

        <br>
        <%= accnote.description.truncate(100) %>
    </div>

    <!-- Modal -->
    <div id="note-<%= accnote.id %>" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Note</h4>
                </div>
                <div class="modal-body">
                    <%= simple_form_for [@account, accnote],remote: true do |f| %>
                    <%= f.input :title %>
                    <%= f.input :description %>
                </div>
                <div class="modal-footer">
                  <%= f.button :submit, class: "btn btn-success" %>
                    <% end %>
                    <%= link_to 'Cancel', '#', class: "btn btn-default", data: {dismiss: "modal"} %>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="accnoteInfo-<%= accnote.id %>" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><%= accnote.title %></h4>
                </div>
                <div class="modal-body">
                    <%= simple_format h(accnote.description) %>
                </div>
                <div class="modal-footer">

                    <%= link_to 'Close', '#', class: "btn btn-default", data: {dismiss: "modal"}%>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</div>
<% end %>
