<div class="row">
    <div class="col-lg-2">
        <small>Account</small>
        <br>
        <h4>
            <% if @case.account.blank? %>
            <span style="color: red;">Account not assigned</span>
        <% else %>
            <%= link_to @case.account.name, account_path(@case.account) %>
            <% end %>
        </h4>
        <br>
    </div>
    <div class="col-lg-2">
        <small>Amount</small>
        <br>
        <h4>
            <% if @case.amount.blank? %>
            <span style="color: red;">Not specified</span>
        <% else %>
            RM <%= sprintf('%.2f' % @case.amount) %>
            <% end %>
        </h4>
        <br>
    </div>

    <div class="col-lg-2">
        <small>Current Stage</small>
        <br>
        <h4>
          <% if @case.stages.blank? %>
            <span style="color: red;">Not specified</span>
          <% else %>
            <% @case.stages.each_with_index do |stage, index| %>

            <% if stage.status == "In Progress" %>
              <%= stage.name %><br>
              <% if stage.id == @case.stages.last.id %>
              <small>Final stage in progress</small>
              <% else %>
              <small>Stage <%= index+1 %> In Progress</small>
              <% end %>
            <% elsif stage.status == "Completed" && stage.id == @case.stages.last.id %>
              <%= stage.name %><br>
              <small>Final stage completed</small>
            <% end %>

            <% end %>
          <% end %>
        </h4>
        <br>
    </div>

    <div class="col-lg-2">
        <small>Status</small>
        <br>
        <h4>
            <%= @case.status %>
        </h4>
        <br>
    </div>

    <% if @case.status == "Closed-Won" ||
      @case.status == "Closed-Loss" ||
      @case.status == "Approved" ||
      @case.status == "Solved" %>
    <div class="col-lg-2">
        <small>
          <%= @case.status %>
          Date
        </small>
        <br>
        <h4>

        </h4>
        <br>
    </div>
    <% end %>

    <div class="col-lg-2">
        <small>Case Owner</small>
        <br>
        <h4><%= link_to @case.user.name, user_path(@case.user) %></h4>
    </div>
</div>
