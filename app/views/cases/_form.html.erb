<%= f.input :name, label: "Name", placeholder: "Name", autofocus: true %>
<%= f.label "Assign to Account Name" %>
<%= f.select :account_id,
  Account.all.collect {|acc| [acc.name, acc.id] }, {},
  {class: "form-control selectpicker", data: {live_search: true}} %>
<br><br>

<div class="form-group select optional case_status">
    <%= f.label "Status", class: "control-label select optional" %>
    <% casestatus = ["In Progress", "Solved"] %>
    <select name="case[status]" id="case_status" class="select form-control optional">

      <% if @case.status == nil %>
        <% casestatus.each do |cstat| %>
        <option id="optcase"><%= cstat %></option>
        <% end %>
      <% else %>
        <option id="optcase"><%= @case.status %></option>
        <% casestatus.each do |cstat| %>
        <% next if @case.status == cstat %>
        <option id="optcase" value="<%= cstat %>"><%= cstat %></option>
        <% end %>
      <% end %>
    </select>
</div>
<%= f.input :amount, label: "Amount", placeholder: "Activity amount" %>
<%= f.input :description, input_html: {rows: 5}, label: "Description", placeholder: "Description" %>
<%= f.label "Assign user as owner" %>
<%= f.input :user_id, label: false, collection: User.all, include_blank: "Choose owner" %>
