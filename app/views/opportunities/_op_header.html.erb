<div class="row">
    <div class="col-lg-2">
        <small>Account</small>
        <br>
        <h4>
            <% if @opportunity.account.blank? %>
            <span style="color: red;">Account not assigned</span>
        <% else %>
            <%= link_to @opportunity.account.account_name, account_path(@opportunity.account) %>
            <% end %>
        </h4>
    </div>
    <div class="col-lg-2">
        <small>Amount</small>
        <br>
        <h4>
            <% if @opportunity.amount.blank? %>
            <span style="color: red;">Not specified</span>
        <% else %>
            <%= @opportunity.amount %>
            <% end %>
        </h4>
    </div>

    <div class="col-lg-2">
        <small>Current Stage</small>
        <br>
        <h4>
          <% if @opportunity.stages.blank? || @opportunity.current_stage.blank? %>
            <span style="color: red;">Not specified</span>
          <% else %>
            <% @opportunity.stages.each do |stage| %>
              <% if stage.status == "In Progress" %>
                <%= stage.name %>
              <% end %>
            <% end %>
          <% end %>
        </h4>
    </div>

    <div class="col-lg-2">
        <small>Status</small>
        <br>
        <h4>
            <% if @opportunity.status == "Closed-Loss" %>
            <span style="color: red;">Closed-Loss</span>
            <% elsif @opportunity.status == "Closed-Won" %>
            <span style="color: green;">Closed-Won</span>
            <% elsif @opportunity.status == "Open" %>
            Open
            <% end %>
        </h4>
    </div>

    <% if @opportunity.status == "Closed-Won" || @opportunity.status == "Closed-Loss" %>
    <div class="col-lg-2">
        <small>Close Date</small>
        <br>
        <h4>
            <% if @opportunity.close_date.blank? %>
            <span style="color: red;">Date not specified</span>
        <% else %>
            <%= @opportunity.close_date.strftime('%d %b %Y') %>
            <% end %>
        </h4>
    </div>
    <% end %>

    <div class="col-lg-2">
        <small>Opportunity Owner</small>
        <br>
        <h4><%= link_to @opportunity.user.name, user_path(@opportunity.user) %></h4>
    </div>
</div>
