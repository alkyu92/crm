
<!-- Modal -->
<div id="opportunityModalForm" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create New Activity / Task</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for @opportunity do |f| %>
        <%= f.input :name %>
        <%= f.input :stage_id, collection: @stages, value_method: :id,
        input_selected: @opportunity.stage_id, include_blank: false  %>
        <%= f.input :account_id, collection: @accounts, value_method: :id,
        input_selected: @opportunity.account_id ,include_blank: false %>
        <%= f.input :close_date, as: :date_time_picker %>
      </div>
      <div class="modal-footer">
        <%= f.button :submit, class: "btn-success" %>
        <% end %>
        <%= link_to 'Cancel', '#', class: "btn btn-default", data: {dismiss: "modal"} %>
      </div>
    </div>

  </div>
</div>
