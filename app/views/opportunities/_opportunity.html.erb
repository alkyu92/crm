<div class="row">
    <div class="col-lg-1">
      <%= opportunity.id %>
    </div>
    <div class="col-lg-3">
        <!-- Opportunity Name -->
        <% if opportunity.name.blank? %>
          <span style="color: red;">Opportunity name not specified</span>
        <% else %>
          <%= opportunity.name %>
        <% end %>
    </div>
    <div class="col-lg-2">
        <!-- Account Name -->
        <% if opportunity.account_id.blank? %>
          <span style="color: red;">Account not specified</span>
        <% else %>
          <%= Account.find_by_id(opportunity.account_id).name %>
        <% end %>
    </div>
    <div class="col-lg-2">
        <!-- Current Stage -->
        <% if opportunity.stage_id.blank? %>
          <span style="color: red;">Current stage not specified</span>
        <% else %>
          <%= Stage.find_by_id(opportunity.stage_id).name %>
        <% end %>
    </div>
    <div class="col-lg-2">
      <!-- Closed Date -->
      <% if opportunity.close_date.blank? %>
      <span style="color: red;">Date not specified</span>
      <% else %>
      <%= opportunity.close_date.strftime('%d %b %Y') %>
      <% end %>
    </div>
    <div class="col-lg-2">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="caret"></i>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to 'Show', opportunity_path(opportunity) %></li>
        <li><%= link_to 'Edit', '#', data: {toggle: "modal", target: "#opportunityModalForm"} %></li>
        <li><%= link_to 'Delete', opportunity_path(opportunity), method: :delete, data: {confirm: "Are you sure?"} %></li>
      </ul>
    </div>
</div>
