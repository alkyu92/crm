<div class="container tab-pane fade in" id="opportunityActivities">
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default panel-body">
                <ul class="nav nav-tabs">
                    <li class="active"><%= link_to 'New Task', '#task', data: {toggle: "tab"} %></li>
                    <li><%= link_to 'Log Call', '#call', data: {toggle: "tab"}%></li>
                    <li><%= link_to 'New Event', '#event', data: {toggle: "tab"}%></li>
                    <li><%= link_to 'Overall', '#overall', data: {toggle: "tab"}%></li>
                </ul>
                <br>

                <div class="tab-content">
                    <div id="task" class="tab-pane fade in active">
                        <%= simple_form_for :task do |f| %>
                        <%= f.input :task, label: false, placeholder: "Input here" %>
                        <%= f.button :submit %>
                        <% end %>
                    </div>

                    <div id="call" class="tab-pane fade in">
                        <%= simple_form_for :call do |f| %>
                        <%= f.input :call, label: false, placeholder: "Input here" %>
                        <%= f.button :submit %>
                        <% end %>
                    </div>

                    <div id="event" class="tab-pane fade in">
                        <%= simple_form_for :event do |f| %>
                        <%= f.input :event, label: false, placeholder: "Input here" %>
                        <%= f.button :submit %>
                        <% end %>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-6">

            <div class="tab-content">
                <div id="task" class="tab-pane fade in active">
                    <h4>Task Timeline</h4>
                    <% for i in 1..6 do %>
