                            <div class="media-left" style="padding-top: 6px;">
                                <%= image_tag('http://placehold.it/25x25', class: "media-object")%>
                            </div>
                            <div class="media-body">
                                <small><%= link_to 'Mohammad' %>
                                    created
                                    <%= link_to 'Call Client'%>
                                    task</small>
                                <h5 style="margin-top: -2px;">
                                    <small>about 2 hours ago</small>
                                    <h5></div>
                                </div>
                            </div>
                            <% end %>
                        </div>

                        <div id="call" class="tab-pane fade in active">
