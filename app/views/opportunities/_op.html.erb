<div class="row">
    <div class="col-lg-10">
        <h1>Opportunities</h1>
        <p><%= pluralize(Opportunity.count, 'item') %></p>
    </div>
    <div class="col-lg-2" style="padding-top: 25px;">
        <%= link_to 'New Opportunity', '#', class: "btn btn-default",
        data: {toggle: "modal", target: "#opportunityModalForm"} %>
    </div>
</div>

<hr>

<div id="notice-op"></div>
<% if @opportunities.blank? %>
No opportunities yet.
<% else %>
<div class="row">
    <div class="col-lg-1">
      <strong>ID</strong>
    </div>
    <div class="col-lg-3">
        <strong>Opportunity Name</strong>
    </div>
    <div class="col-lg-2">
        <strong>Account Name</strong>
    </div>
    <div class="col-lg-2">
        <strong>Current Stage</strong>
    </div>
    <div class="col-lg-2">
        <strong>Closed Date</strong>
    </div>
    <div class="col-lg-2">
      <strong>Action</strong>
    </div>
</div>
  <% @opportunities.each do |opportunity| %>
  <hr>
  <div class="row">
      <div class="col-lg-1">
        <%= opportunity.id %>
      </div>
      <div class="col-lg-3">
          <!-- Opportunity Name -->
          <% if opportunity.name.blank? %>
            <span style="color: red;">Opportunity name not specified</span>
          <% else %>
            <%= link_to opportunity.name, opportunity_path(opportunity) %>
          <% end %>
      </div>
      <div class="col-lg-2">
          <!-- Account Name -->
          <% if opportunity.account_id.blank? %>
            <span style="color: red;">Account not specified</span>
          <% else %>
            <%= link_to opportunity.account.account_name, account_path(opportunity.account) %>
          <% end %>
      </div>
      <div class="col-lg-2">
          <!-- Current Stage -->
          <% if opportunity.current_stage.blank? %>
            <span style="color: red;">Current stage not specified</span>
          <% else %>
            <%= opportunity.current_stage %>
          <% end %>
      </div>
      <div class="col-lg-2">
        <!-- Closed Date -->
        <% if opportunity.close_date.blank? %>
        <span style="color: red;">Date not specified</span>
        <% else %>
        <%= opportunity.close_date.strftime('%d %b %Y') %>
        <% end %>
      </div>
      <div class="col-lg-2">
        <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
          <i class="caret"></i>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Show', opportunity_path(opportunity) %></li>
          <li><%= link_to 'Delete', opportunity_path(opportunity),
          method: :delete, data: {confirm: "Are you sure?"}, remote: true %></li>
        </ul>
      </div>
  </div>

  <% end %>

<% end %>
