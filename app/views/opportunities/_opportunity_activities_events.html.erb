<div id="event_list" class="tab-pane fade in">
    <h4>Events</h4>
    <% if @opportunity.events.blank? %>
    No event created yet.
    <% else %>
    <ul class="list-group">
      <li class="list-group-item">
      <div class="row">
        <div class="col-lg-5">
          <strong>Description</strong>
        </div>
        <div class="col-lg-3">
          <strong>Due date</strong>
        </div>
        <div class="col-lg-2">
          <strong>Status</strong>
        </div>
        <div class="col-lg-2">
          <strong>Action</strong>
        </div>
      </div>
    </li>
        <% @opportunity.events.each do |event| %>
        <li class="list-group-item">
            <div class="row">
                <div class="col-lg-5">
                    <%= event.description %>
                </div>
                <div class="col-lg-3">
                  <% if event.event_date.blank? %>
                  <span style="color: red;">Date not specified</span>
                  <% else %>
                    <%= event.event_date.strftime('%d %b %Y') %>
                  <% end %>
                </div>
                <div class="col-lg-2">
                    <% if %>
                    <span style="color: red;">Not attend</span>
                <% else %>
                    <span style="color: green;">Attended</span>
                    <% end %>
                </div>
                <div class="col-lg-2">
                  <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
                    <i class="caret"></i>
                  </a>
                  <ul class="dropdown-menu">
                    <li>
                      <% if %>
                      <%= link_to 'Mark as Attended', update_event_status_path(@opportunity, event) %>
                      <% else %>
                      <%= link_to 'Mark as Not Attend', update_event_status_path(@opportunity, event) %>
                      <% end %>
                    </li>
                    <li><%= link_to 'Edit Event', '#', data: {toggle: "modal", target: "#actEvent"} %></li>
                    <li><%= link_to 'Delete Event', opportunity_event_path(@opportunity, event), method: :delete %></li>
                  </ul>
                </div>
            </div>
        </li>

        <!-- Modal -->
        <div id="actEvent" class="modal fade" role="dialog">
          <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Task</h4>
              </div>
              <div class="modal-body">
                <%= simple_form_for [@opportunity, event] do |f| %>
                <%= f.input :description, placeholder: "Task description" %>
                <%= f.input :event_date %>
              </div>
              <div class="modal-footer">
                <%= f.button :submit, class: "btn btn-success" %>
                <% end %>
                <%= link_to 'Cancel', '#', class: "btn btn-default", data: {dismiss: "modal"} %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
    </ul>
    <% end %>
</div>
