<div class="container">
    <div id="op-title">
      <%= render 'opportunities/op_title' %>
    </div>
    <% provide(:form_title, 'Edit Opportunity / Case Entry')%>
    <%= render 'opportunities/modal_form' %>
    <br>

    <div id="op-header">
    <%= render 'opportunities/op_header' %>
    </div>

    <hr>

    <%= render 'stages/opportunity_stages'%>

    <hr>

    <div class="row">
        <div class="col-lg-12">
            <ul class="nav nav-tabs">
                <li class="active"><%= link_to 'Activities', '#opportunityActivities',
              data: {toggle: "tab", target: "#opportunityActivities"} %></li>
                <li><%= link_to 'Related Contacts', '#relatedContacts',
                data: {toggle: "tab", target: "#relatedContacts"} %></li>
                <li><%= link_to 'Related Documents', '#relatedDocs',
                data: {toggle: "tab", target: "#relatedDocs"} %></li>
                <li><%= link_to 'Notes', '#relatedNotes',
                data: {toggle: "tab", target: "#relatedNotes"} %></li>
                <li><%= link_to 'Details', '#opportunityDetails',
                data: {toggle: "tab", target: "#opportunityDetails"} %></li>
            </ul>
        </div>
    </div>

    <br>

    <div class="row">

        <div class="col-lg-6">
            <div class="tab-content">
                <%= render 'activities/index' %>
                <%= render 'details' %>
                <%= render 'notes/related_notes' %>
                <%= render 'contacts/related_contacts' %>
                <%= render 'documents/related_docs' %>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="timelines">
                <%= render 'timelines/timelines_index' %>
            </div>
        </div>
    </div>
</div>

<%= javascript_tag defer: 'defer' do %>
var locHash = window.location.hash.split('-')
$('.nav-tabs a[href="' + locHash[0] + '"]').tab('show');

var id = '#' + locHash[1] + '-' + locHash[2];
$(id).modal('show');
<% end %>
