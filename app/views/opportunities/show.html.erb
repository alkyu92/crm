<h3><%= @opportunity.name %></h3>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <small>Account</small>
            <br>
            <h4><%= Account.find_by_id(@opportunity.account_id).name %></h4>
        </div>
        <div class="col-lg-3">
            <small>Opportunity Owner</small>
            <br>
            <h4><%= @opportunity.close_date.strftime('%d %b %Y') %></h4>
        </div>
        <div class="col-lg-3">
            <small>Amount</small>
            <br>
            <h4><%= @opportunity.amount %></h4>
        </div>
        <div class="col-lg-3">
            <small>Opportunity Owner</small>
            <br>
            <h4><%= @opportunity.user.name %></h4>
        </div>
    </div>
</div>
<hr>

<div class="container">
    <div class="row">
        <% for i in 1..6 do %>
        <% if %>
        <div class="col-lg-2 btn btn-default">
        <% else %>
            <div class="col-lg-2 btn btn-success">
                <% end %>
                <span class="pull-left badge"><%= i %></span>
                Nego
                <br>
                <% if %>
                <small>In progress</small><br>
                <small><%= link_to 'Mark as Completed' %></small>
            <% else %>
                <small>Completed</small>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>

<hr>

<div class="container">
<div class="row">
<div class="col-lg-12">
<ul class="nav nav-tabs">
  <li class="active"><%= link_to 'Details', '#' %></li>
  <li><%= link_to 'Activities', '#' %></li>
  <li><%= link_to 'Notes', '#' %></li>
  <li><%= link_to 'Related Contacts', '#' %></li>
  <li><%= link_to 'Related Documents', '#' %></li>
</ul>
</div>
</div>
</div>

<%= render 'opportunity_activities' %>
<%= render 'opportunity_details' %>
<%= render 'opportunity_notes' %>
<%= render 'opportunity_contacts' %>
<%= render 'opportunity_docs' %>
