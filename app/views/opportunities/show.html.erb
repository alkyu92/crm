<div class="container">
    <div class="row">
        <div class="col-lg-10">
            <h3><%= @opportunity.name %></h3>
        </div>
        <div class="col-lg-2">
            <div class="btn-group" style="padding-top: 10px;">
                <%= link_to 'Edit', '#', class: "btn btn-default",
                data: {toggle: "modal", target: "#opportunityModalForm"}%>
                <%= link_to 'Delete', opportunity_path(@opportunity), method: :delete,
    data: {confirm: "Are yo sure?"},class: "btn btn-default" %>
            </div>
        </div>
    </div>
    <% provide(:form_title, 'Edit Opportunity Entry')%>
    <%= render 'form' %>
    <br>
    <div class="row">
        <div class="col-lg-3">
            <small>Account</small>
            <br>
            <h4><%= Account.find_by_id(@opportunity.account_id).name %></h4>
        </div>
        <div class="col-lg-3">
            <small>Due Date</small>
            <br>
            <% if @opportunity.close_date.blank? %>
            <span style="color: red;">Date not specified</span>
        <% else %>
            <h4><%= @opportunity.close_date.strftime('%d %b %Y') %></h4>
            <% end %>
        </div>
        <div class="col-lg-3">
            <small>Amount</small>
            <br>
            <h4><%= @opportunity.amount %></h4>
        </div>
        <div class="col-lg-3">
            <small>Opportunity Owner</small>
            <br>
            <h4><%= @opportunity.user.name %></h4>
        </div>
    </div>
</div>

<hr>

<%= render 'opportunity_stages'%>

<hr>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <ul class="nav nav-tabs">
              <li class="active"><%= link_to 'Activities', '#opportunityActivities',
              data: {toggle: "tab", target: "#opportunityActivities"} %></li>
                <li><%= link_to 'Details', '#opportunityDetails',
                data: {toggle: "tab", target: "#opportunityDetails"} %></li>
                <li><%= link_to 'Notes', '#opportunityNotes',
                data: {toggle: "tab", target: "#opportunityNotes"} %></li>
                <li><%= link_to 'Related Contacts', '#opportunityContacts',
                data: {toggle: "tab", target: "#opportunityContacts"} %></li>
                <li><%= link_to 'Related Documents', '#opportunityDocs',
                data: {toggle: "tab", target: "#opportunityDocs"} %></li>
            </ul>
        </div>
    </div>
</div>

<br>

<div class="container">
    <div class="row">

        <div class="col-lg-6">
          <div class="tab-content">
          <%= render 'opportunity_activities' %>
          <%= render 'opportunity_details' %>
          <%= render 'opportunity_notes' %>
          <%= render 'opportunity_contacts' %>
          <%= render 'opportunity_docs' %>
        </div>
        </div>

        <div class="col-lg-6">
            <h4>Timeline &middot History</h4>
            <% @opportunity.timelines.order('created_at DESC').each do |timeline| %>
            <div class="panel panel-default panel-body">
                <div class="media">
                    <div class="media-left" style="padding-top: 6px;">
                        <%= image_tag('http://placehold.it/25x25', class: "media-object")%>
                    </div>
                    <div class="media-body">
                        <small>
                            <%= link_to timeline.user.name, user_path(timeline.user.id) %>
                            <%= timeline.action %>
                            <%= timeline.tactivity %>
                            <%= timeline.idactivity %>
                        </small>
                        <h5 style="margin-top: -2px;">
                            <small>
                              <%= timeline.created_at.strftime('%d %b %Y') %>
                              &middot
                              <%= time_ago_in_words(timeline.created_at) %> ago
                            </small>
                            <h5></div>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
