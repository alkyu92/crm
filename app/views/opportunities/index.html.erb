<div class="row">
    <div class="col-lg-10">
        <h1>Opportunities</h1>
        <p><%= pluralize(Opportunity.count, 'item') %></p>
    </div>
    <div class="col-lg-2" style="padding-top: 25px;">
        <%= link_to 'New Opportunity', '#', class: "btn btn-default",
        data: {toggle: "modal", target: "#opportunityModalForm"} %>
    </div>
</div>

<% provide(:form_title, 'Create New Opportunity Entry') %>
<%= render 'form' %>

<hr>

<% if @opportunities.blank? %>
No opportunities yet.
<% else %>
<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-3">
        <strong>Opportunity Name</strong>
    </div>
    <div class="col-lg-2">
        <strong>Account Name</strong>
    </div>
    <div class="col-lg-2">
        <strong>Current Stage</strong>
    </div>
    <div class="col-lg-2">
        <strong>Closed Date</strong>
    </div>
    <div class="col-lg-2">
      <strong>Action</strong>
    </div>
</div>
  <%= render @opportunities %>
<% end %>
