<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <h3>Create New Opportunity Entry</h3>
        <hr>
        <%= simple_form_for [@account, @opportunity] do |f| %>
        <div class="row">
            <div class="col-lg-12">
              <%= render 'opportunities/form', f: f %>
            </div>
        </div>
        <hr>
        <%= f.button :submit, class: "btn-success" %>
        <% end %>
        <!-- simple_form_for -->
    </div>
    <div class="col-lg-2"></div>
</div>

<%= render 'opportunities/form_script' %>
