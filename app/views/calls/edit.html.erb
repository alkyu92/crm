<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <h3>Edit Call Log</h3>
      <hr>
      <strong>Belongs to</strong><br>
      <small>Account</small><br>
      <%= link_to @opportunity.account.account_name, account_path(@opportunity.account) %>
      <br><br>

      <small><%= @opportunity.business_type == "Opportunity" ? 'Opportunity' : 'Case' %></small><br>
      <%= link_to @opportunity.name, opportunity_path(@opportunity) %>
      <br><br>

<%= simple_form_for [@opportunity, @call] do |f| %>
<%= f.input :description, placeholder: "Call description" %>
<div class="row">
    <div class="col-lg-6">
        <%= f.input :call_datetime, label: "Call Date Time", as: :date_time_picker %>
    </div>
    <div class="col-lg-6">
        <%= f.input :duration, label: "Call Duration",hint: "in minutes",
    placeholder: "Insert number" %>
    </div>
</div>

<%= f.button :submit, class: "btn btn-success" %>
<% end %>
</div>
<div class="col-lg-3"></div>
</div>
