<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <h3>Edit Call Log
        <small class="pull-right"><%= link_to 'Delete this call log',
        polymorphic_path([@subject, @call]),
        method: :delete, data: {confirm: "Are you sure?"} %></small>
      </h3>
      <hr>
      <strong>Belongs to</strong><br>
      <small>Account</small><br>
      <%= link_to @subject.account.name, account_path(@subject.account) %>
      <br><br>

      <small><%= @call.polycall_type %></small><br>
      <%= link_to @subject.name, polymorphic_path(@subject) %>
      <br><br>

<%= simple_form_for [@subject, @call] do |f| %>
<%= f.input :description, placeholder: "Call description" %>
<div class="row">
    <div class="col-lg-6">
        <%= f.input :call_datetime, label: "Call Date Time", as: :date_time_picker %>
    </div>
    <div class="col-lg-6">
        <%= f.input :duration, label: "Call Duration",hint: "in minutes",
    placeholder: "Insert number" %>
    </div>
</div>

<%= f.button :submit, class: "btn btn-success" %>
<% end %>
</div>
<div class="col-lg-3"></div>
</div>
