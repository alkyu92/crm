<div id="notice-call">
    <%= render 'layouts/message' %>
</div>

<hr>

<div class="row">
    <div class="col-lg-1 col-xs-1 text-center">
        <strong>ID</strong>
    </div>
    <div class="col-lg-2 col-xs-10">
        <strong>Description</strong>
        <br><br>
    </div>
    <div class="col-lg-2 col-xs-6">
        <strong>Call DateTime</strong>
    </div>
    <div class="col-lg-2 col-xs-6">
        <strong>Belongs to</strong>
        <br><br>
    </div>
    <div class="col-lg-2 col-xs-6">
        <strong>Account Name</strong>
    </div>
    <div class="col-lg-1 col-xs-6">
        <strong>Created At DateTime</strong>
        <br><br>
    </div>
    <div class="col-lg-2 col-xs-2 text-center">
        <strong>Action</strong>
    </div>
</div>

<% if @calls.blank? %>
<hr>
<div class="text-center">
    No call logs found.<br><br>
    Create call log through subject.
</div>
<% else %>

<% @calls.each do |call| %>
<hr>
<div class="row">
    <div class="col-lg-1 col-xs-1 text-center">
      <span class="badge"><%= call.id %></span>
    </div>
    <div class="col-lg-2 col-xs-10">
        <%= link_to call.description.truncate(50), '#',
    data: {toggle: "modal", target: "#callInfo-#{call.id}"} %>
    <br><br>
    </div>
    <div class="col-lg-2 col-xs-6">
        <% if call.call_datetime.blank? %>
        <span style="color: red;">Date not specified</span>
    <% else %>
        <%= call.call_datetime.strftime('%d %b %Y at %H:%M:%S') %><br>
        <% end %>
    </div>
    <div class="col-lg-2 col-xs-6">
      <small><%= call.polycall_type %></small><br>
      <%= link_to call.polycall.name, polymorphic_path(call.polycall) %>
      <br><br>
    </div>
    <div class="col-lg-2 col-xs-6">
      <small>Account</small><br>
        <%= link_to call.polycall.account.name, account_path(call.polycall) %>
    </div>
    <div class="col-lg-1 col-xs-6">
      <%= call.created_at.strftime('%d %b %Y at %H:%M:%S') %>
      <br><br><br>
    </div>
    <div class="col-lg-2 col-xs-2 text-center">
        <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
            <i class="caret"></i>
        </a>
        <ul class="dropdown-menu">
            <li><%= link_to 'Show', polymorphic_path(call.polycall, anchor: "call-callInfo-#{call.id}") %></li>
            <li><%= link_to 'Delete', polymorphic_path([call.polycall, call]),
        method: :delete, data: {confirm: "Are you sure?"}, remote: true %></li>
        </ul>
    </div>
</div>

<%= render 'calls/call_info', call: call %>
<% end %>
<br>
<div class="text-center">
    <%= paginate @calls %>
</div>
<% end %>
