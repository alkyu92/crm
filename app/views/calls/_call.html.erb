<h4>Calls</h4>
<hr>
<div id="notice-call"></div>
<% if @opcall.blank? %>
No call logs found.
<% else %>
<div class="text-center">
  <%= page_entries_info @opcall %><br>
  <%= paginate @opcall, param_name: :call_page, remote: true %>
</div>
<ul class="list-group">
    <li class="list-group-item">
        <div class="row">
            <div class="col-lg-5">
                <strong>Description</strong>
            </div>
            <div class="col-lg-2">
                <strong>Duration</strong>
            </div>
            <div class="col-lg-3">
                <strong>Call Date Time</strong>
            </div>
            <div class="col-lg-2 text-center">
                <strong>Action</strong>
            </div>
        </div>
    </li>

    <% @opcall.each do |call| %>
    <li class="list-group-item">
        <div class="row" id="call-<%= call.id %>">
            <div class="col-lg-5">
                <%= link_to call.description.truncate(50), '#',
                data: {toggle: "modal", target: "#callInfo-#{call.id}"} %>
            </div>
            <div class="col-lg-2">
                <% if call.duration.blank? %>
                <span style="color: red;">Not specified</span>
            <% else %>
                <%= call.duration %>
                minutes
                <% end %>
            </div>
            <div class="col-lg-3">
                <% if call.call_datetime.blank? %>
                <span style="color: red;">Date not specified</span>
            <% else %>
                <%= call.call_datetime.strftime('%d %b %Y %H:%M:%S') %>
                <% end %>
            </div>
            <div class="col-lg-2 text-center">
                <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
                    <i class="caret"></i>
                </a>
                <ul class="dropdown-menu">
                    <li><%= link_to 'Show', '#',
                    data: {toggle: "modal", target: "#callInfo-#{call.id}"}%></li>
                    <li><%= link_to 'Edit Call', edit_opportunity_call_path(@opportunity, call) %></li>
                    <li><%= link_to 'Delete Call', opportunity_call_path(@opportunity, call),
                method: :delete, remote: true, data: {confirm: "Are you sure?"} %></li>
                </ul>
            </div>
        </div>
    </li>
    <%= render 'calls/call_info', call: call %>
    <% end %>
</ul>
<div class="text-center">
  <%= page_entries_info @opcall %><br>
  <%= paginate @opcall, param_name: :call_page, remote: true %>
</div>
<% end %>
