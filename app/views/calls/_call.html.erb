<h4>Calls</h4>
<ul class="list-group">
  <li class="list-group-item">
  <div class="row">
    <div class="col-lg-5">
      <strong>Description</strong>
    </div>
    <div class="col-lg-2">
      <strong>Duration</strong>
    </div>
    <div class="col-lg-3">
      <strong>Call Date Time</strong>
    </div>
    <div class="col-lg-2">
      <strong>Action</strong>
    </div>
  </div>
</li>
    <% @opportunity.calls.each do |call| %>
    <li class="list-group-item">
        <div class="row">
            <div class="col-lg-5">
                <%= call.description %>
            </div>
            <div class="col-lg-2">
              <% if call.duration.blank? %>
              <span style="color: red;">Duration not specified</span>
              <% else %>
                <%= call.duration %>
              <% end %>
            </div>
            <div class="col-lg-3">
              <% if call.call_datetime.blank? %>
                <span style="color: red;">Date not specified</span>
              <% else %>
                <%= call.call_datetime.strftime('%d %b %Y %H:%M:%S') %>
              <% end %>
            </div>
            <div class="col-lg-2">
              <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
                <i class="caret"></i>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Edit Call', '#', data: {toggle: "modal", target: "#actCall"} %></li>
                <li><%= link_to 'Delete Call', opportunity_call_path(@opportunity, call),
                method: :delete, remote: true %></li>
              </ul>
            </div>
        </div>
    </li>
    <% end %>
</ul>
