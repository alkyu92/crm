<div class="row">
    <div class="col-lg-10">
        <h3>
            <%= @account.account_name %>
            <small>Account</small>
        </h3>
    </div>
    <div class="col-lg-2">
        <div class="btn-group pull-right" style="padding-top: 15px;">
            <%= link_to 'Edit', '#', class: "btn btn-default",
  data: {toggle: "modal", target: "#accountModalForm"}%>
            <%= link_to 'Delete', account_path(@account), method: :delete,
data: {confirm: "Are you sure?"},class: "btn btn-default" %>
        </div>
    </div>
</div>
