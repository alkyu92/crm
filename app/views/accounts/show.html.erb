<div class="container">

    <div id="acc-title">
        <%= render 'accounts/account_title' %>
    </div>

    <% provide(:form_title, 'Edit Account Entry')%>
    <%= render 'form' %>

    <hr>
    <div id="acc-info">
        <%= render 'accounts/account_info' %>
    </div>
    <hr>

    <div class="row">
        <div class="col-lg-12">
            <ul class="nav nav-tabs">
                <li class="active"><%= link_to 'Related Opportunities', '#accountOpportunities',
                data: {toggle: "tab", target: "#accountOpportunities"} %></li>
                <li><%= link_to 'Related Contacts', '#accountContacts',
                data: {toggle: "tab", target: "#accountContacts"} %></li>
                <li><%= link_to 'Related Documents', '#accountDocs',
                data: {toggle: "tab", target: "#accountDocs"} %></li>
                <li><%= link_to 'Notes', '#accountNotes',
                data: {toggle: "tab", target: "#accountNotes"} %></li>
                <li><%= link_to 'Details', '#accountDetails',
                data: {toggle: "tab", target: "#accountDetails"} %></li>
            </ul>
        </div>
    </div>

    <br>

    <div class="row">

        <div class="col-lg-6">
            <div class="tab-content">
                <%= render 'account_related_opportunities' %>
                <%= render 'acccontacts/account_related_contact' %>
                <%= render 'accdocuments/account_related_doc' %>
                <%= render 'accnotes/account_related_note' %>
                <%= render 'details' %>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="acctimelines">
                <%= render 'acctimelines/timelines_account' %>
            </div>
        </div>
    </div>
</div>
