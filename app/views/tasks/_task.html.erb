<h4>Tasks</h4>
<div id="notice-task"></div>
<% if @opportunity.tasks.blank? %>
No tasks created yet.
<% else %>
<ul class="list-group">
    <li class="list-group-item">
        <div class="row">
            <div class="col-lg-5">
                <strong>Description</strong>
            </div>
            <div class="col-lg-3">
                <strong>Due date</strong>
            </div>
            <div class="col-lg-2">
                <strong>Status</strong>
            </div>
            <div class="col-lg-2">
                <strong>Action</strong>
            </div>
        </div>
    </li>
</ul>
    <% @opportunity.tasks.order('created_at DESC').each do |task| %>
    <li class="list-group-item">
        <div class="row" id="task-<%= task.id %>">
            <div class="col-lg-5">
                <%= link_to task.description.truncate(50), '#', data: {toggle: "modal", target: "#taskInfo-#{task.id}"} %>
            </div>
            <div class="col-lg-3">
                <% if task.due_date.blank? %>
                <span style="color: red;">Date not specified</span>
            <% else %>
                <% if task.due_date > Date.today %>
                <%= task.due_date.strftime('%d %b %Y') %><br>
                <small>
                    (<%= distance_of_time_in_words(task.due_date, Time.now)%>
                    left)
                </small>
                <% elsif task.due_date == Date.today %>
                <strong style="color: orange;">Today</strong>
            <% else %>
                <span style="color: red;">
                  Date overdue<br>
                  <%= task.due_date.strftime('%d %b %Y') %><br>
                  <small>
                      (<%= distance_of_time_in_words(task.due_date, Time.now)%>
                      ago)
                  </small>
                </span>
                <% end %>
                <% end %>
            </div>
            <div class="col-lg-2">
                <% if task.complete == false %>
                <span style="color: red;">Incomplete</span>
            <% else %>
                <span style="color: green;">Completed</span>
                <% end %>
            </div>
            <div class="col-lg-2">
                <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
                    <i class="caret"></i>
                </a>
                <ul class="dropdown-menu">
                    <li><%= link_to 'Show', '#', data: {toggle: "modal", target: "#taskInfo-#{task.id}"} %></li>
                    <li><%= link_to 'Edit Task', '#', data: {toggle: "modal", target: "#taskEdit-#{task.id}"} %></li>
                    <li><%= link_to 'Delete Task', opportunity_task_path(@opportunity, task),
            method: :delete, remote: true, data: {confirm: "Are you sure?"} %></li>
                </ul>
            </div>
        </div>
    </li>

    <!-- Modal -->
    <div id="taskInfo-<%= task.id %>" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">
                        <small>Task</small>
                    </h4>
                    <div class="row">
                      <div class="col-lg-4">
                        <h4>
                          <small>Due Date</small><br>
                          <% if task.due_date.blank? %>
                          <span style="color: red;">
                            Date not specified
                          </span>
                          <% else %>
                          <%= task.due_date %>
                          <% end %>
                        </h4>
                      </div>
                      <div class="col-lg-3">
                        <h4>
                          <small>Status</small><br>
                          <% if task.complete == false %>
                          <span style="color: red;">Incomplete</span>
                          <% elsif task.complete == true %>
                          <span style="color: green;">Completed</span>
                          <% end %>
                        </h4>
                      </div>
                      <div class="col-lg-5">
                        <h4>
                          <small>Created at</small><br>
                          <%= task.created_at.strftime('%d %b %Y %H:%M:%S')%>
                        </h4>
                      </div>
                    </div>
                </div>
                <div class="modal-body">
                  <h4><small>Description</small></h4>
                    <%= simple_format h(task.description) %>
                </div>
                <div class="modal-footer">

                    <%= link_to 'Close', '#', class: "btn btn-default", data: {dismiss: "modal"}%>
                </div>
            </div>
        </div>
    </div>
    <% end %>

<% end %>
