<div id="task_list" class="tab-pane fade in active">

    <div class="task">
      <%= render 'tasks/task' %>
    </div>

    <% @opportunity.tasks.each do |task| %>
    <!-- Modal -->
    <div id="taskEdit-<%= task.id %>" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Task</h4>
                </div>
                <div class="modal-body">
                    <%= simple_form_for [@opportunity, task], remote: true do |f| %>
                    <%= f.input :description, placeholder: "To-do" %>
                    <%= f.input :due_date, as: :date_time_picker %>
                    <%= f.label "Status" %><br>
                    <% if task.complete == false %>
                    <h4 style="color: red;">Incomplete
                    <%= link_to 'Mark as Completed', update_task_status_path(@opportunity, task),
                    remote: true, class: "btn btn-default" %></h4>
                    <% else %>
                    <h4 style="color: green;">Completed
                      <%= link_to 'Mark as Completed', update_task_status_path(@opportunity, task),
                      remote: true, class: "btn btn-default" %></h4>
                    <% end %>
                </div>
                <div class="modal-footer">
                    <%= f.button :submit, class: "btn btn-success" %>
                    <% end %>
                    <%= link_to 'Cancel', '#', class: "btn btn-default", data: {dismiss: "modal"}%>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</div>
