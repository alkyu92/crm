<div class="tab-pane fade in" id="relatedNotes">
    <h4>Related Notes</h4>
    <div class="panel panel-default panel-body">
        <%= simple_form_for [@subject, @note, Note.new], remote: true do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.button :submit %>
        <% end %>
    </div>
    <br>

    <% @subject.notes.each do |note| %>
    <!-- Modal -->
    <div id="editNoteModal-<%= note.id %>" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Task
                        <%= note.id %></h4>
                </div>
                <div class="modal-body">
                    <%= simple_form_for [@subject, note], remote: true do |f| %>
                    <%= f.input :title %>
                    <%= f.input :description %>
                </div>
                <div class="modal-footer">
                    <%= f.button :submit, class: "btn btn-success" %>
                    <% end %>
                    <%= link_to 'Cancel', '#', class: "btn btn-default", data: {dismiss: "modal"}%>
                </div>
            </div>
        </div>
    </div>
    <% end %>

    <div class="note">
      <%= render 'notes/note' %>
    </div>
</div>
