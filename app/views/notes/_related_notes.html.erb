<div class="tab-pane fade in" id="opportunityNotes">
    <h4>Opportunity Notes</h4>
    <div class="panel panel-default panel-body">
        <%= simple_form_for [@opportunity, @note, Note.new], remote: true do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.button :submit %>
        <% end %>
    </div>
    <br>

    <div class="note">
      <%= render 'notes/note' %>
    </div>

    <% if @opportunity.notes.blank? %>
    No notes submitted yet.
    <% else %>
    <% @opportunity.notes.each do |note| %>
    <!-- Modal -->
    <div id="noteModal-<%= note.id %>" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Task
                        <%= note.id %></h4>
                </div>
                <div class="modal-body">
                    <%= simple_form_for [@opportunity, note], remote: true do |f| %>
                    <%= f.input :title %>
                    <%= f.input :description %>
                </div>
                <div class="modal-footer">
                    <%= f.button :submit, class: "btn btn-success" %>
                    <% end %>
                    <%= link_to 'Cancel', '#', class: "btn btn-default", data: {dismiss: "modal"}%>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="noteInfo-<%= note.id %>" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">
                      <small>Note</small>
                      <br>
                      <%= note.title %></h4>
                </div>
                <div class="modal-body">
                    <%= simple_format h(note.description) %>
                </div>
                <div class="modal-footer">

                    <%= link_to 'Close', '#', class: "btn btn-default", data: {dismiss: "modal"}%>
                </div>
            </div>
        </div>
    </div>
    <% end %>
    <% end %>
</div>
