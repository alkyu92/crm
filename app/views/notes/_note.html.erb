<h4>Notes</h4>
<div id="notice-note"></div>
<% if @opportunity.notes.blank? %>
No notes submitted yet.
<% else %>
    <% @opportunity.notes.each do |note| %>
    <div class="col-lg-6 panel panel-body">
        <div class="pull-right">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="caret"></i>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Show', '#', data: {toggle: "modal", target: "#noteInfo-#{note.id}"}%></li>
                <li><%= link_to 'Edit', '#',
            data: {toggle: "modal", target: "#noteModal-#{note.id}"} %></li>
                <li><%= link_to 'Delete',
            opportunity_note_path(@opportunity, note), method: :delete, remote: true %></li>
            </ul>
        </div>

        <h5>
          <%= link_to note.title.truncate(40), '#',
          data: {toggle: "modal", target: "#noteInfo-#{note.id}"} %>
            <small>
                <%#= note.user.name %>
                <%= time_ago_in_words(note.created_at) %>
                ago
            </small>
        </h5>
        <%= note.description.truncate(100) %>
    </div>
    <% end %>
<% end %>
