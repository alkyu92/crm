<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <h3>Edit Event
        <small class="pull-right"><%= link_to 'Delete this event',
        polymorphic_path([@subject, @event]),
        method: :delete, data: {confirm: "Are you sure?"} %></small>
      </h3>
      <hr>
      <strong>Belongs to</strong><br>
      <small>Account</small><br>
      <%= link_to @subject.account.name, account_path(@subject.account) %>
      <br><br>

      <small><%= @event.polyevent_type %></small><br>
      <%= link_to @subject.name, polymorphic_path(@subject)%>
      <br><br>
        <%= simple_form_for [@subject, @event] do |f| %>

        <%= f.input :description %>
        <div class="row">
          <div class="col-lg-6">
            <%= f.input :event_date, as: :date_time_picker %>
          </div>
          <div class="col-lg-6">
            <%= f.input :event_finish, as: :date_time_picker %>
          </div>
        </div>
        <%= f.label 'Status' %><br>
        <h4><%= @event.complete ? 'Will Attend' : 'Not Attend' %></h4>

        <%= check_box_tag "attended" %>
        Mark as "<%= @event.complete ? 'Not Attend' : 'Will Attend' %>"
        <hr>
        <%= f.button :submit, class: "btn btn-success" %>
        <% end %>
    </div>
    <div class="col-lg-3"></div>
</div>
