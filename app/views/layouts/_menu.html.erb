<ul class="nav navbar-nav navbar-right">

    <li><%= link_to 'Dashboards', dashboards_path %></li>
    <li><%= link_to 'Accounts', accounts_path %></li>
    <li><%= link_to 'Contacts', contacts_path %></li>
    <li><%= link_to 'Opportunities', opportunities_path %></li>
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Activities
            <div class="caret"></div>
        </a>
        <ul class="dropdown-menu">
            <li><%= link_to 'Tasks', tasks_path %></li>
            <li><%= link_to 'Calls', calls_path %></li>
            <li><%= link_to 'Events', events_path %></li>
        </ul>
    </li>
    <li class="dropdown">
        <% @timelinesall = Timeline.all.order('created_at DESC').includes(:user) +
        Acctimeline.all.order('created_at DESC').includes(:user) %>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-bell"></i>
            <span class="badge">
              <% if @timelinesall.blank? %>
              0
              <% else %>
                <%= @timelinesall.count %>
              <% end %>
          </span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <% if @timelinesall.blank? %>
          <li><a href="#">There no notifications yet.</a></li>
          <% else %>
            <% @timelinesall.take(8).each do |tl| %>
            <li>
                <a href="#">
                    <div class="media">
                        <div class="media-left">
                            <% if tl.user.avatar.blank? %>
                            <%= letter_avatar_tag(tl.user.name, 40, class: "media-object") %>
                        <% else %>

                            <% end %>
                        </div>
                        <div class="media-body">
                            <small>
                                <strong><%= tl.user.name %></strong>
                                <%= tl.action %>
                                <strong><%= tl.nactivity %></strong>
                                <br>
                                <%= time_ago_in_words(tl.created_at) %>
                                ago
                            </small>
                        </div>
                    </div>
                </a>
            </li>
            <hr style="margin-top: 5px; margin-bottom: 5px;">
            <% end %>

            <li><%= link_to 'View All', notifications_path, class: "text-center" %></li>
            <% end %>
        </ul>
    </li>

    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <% if current_user.avatar.blank? %>
            <%= letter_avatar_tag(current_user.name, 25) %>
        <% else %>
            <%= image_tag(current_user.avatar.url(:small)) %>
            <% end %>
            <%= current_user.name.truncate(10) %>
            <i class="caret"></i>
        </a>
        <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'My Profile', user_path(current_user) %></li>
            <li><%= link_to 'Users', users_path %></li>
            <li class="divider"></li>
            <li><%= link_to 'Settings', edit_user_registration_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        </ul>
    </li>

</ul>
