<h2>Contacts</h2>
<%= pluralize(@merge.count, 'item')%>
<hr>
<% if @merge.blank? %>
There are no contacts registered yet.
<% else %>
<div class="row">
    <div class="col-lg-2">
        <strong>Name</strong>
    </div>
    <div class="col-lg-1">
        <strong>Title</strong>
    </div>
    <div class="col-lg-2">
        <strong>Department</strong>
    </div>
    <div class="col-lg-2">
        <strong>Email</strong>
    </div>
    <div class="col-lg-2">
        <strong>Phone</strong>
    </div>
    <div class="col-lg-3">
        <strong>Mailing Address</strong>
    </div>
</div>
<% @merge.each do |contact| %>
<hr>
<div class="row">
    <div class="col-lg-2">
      <% if contact.name.blank? %>
      <span style="color: red;">Name</span>
      <% else %>
        <%= contact.name %>
      <% end %>
    </div>
    <div class="col-lg-1">
      <% if contact.title.blank? %>
      <span style="color: red;">Position title not specified</span>
      <% else %>
        <%= contact.title %>
      <% end %>
    </div>
    <div class="col-lg-2">
      <% if contact.department.blank? %>
      <span style="color: red;">Department not specified</span>
      <% else %>
        <%= contact.department %>
      <% end %>
    </div>
    <div class="col-lg-2">
      <% if contact.email.blank? %>
      <span style="color: red;">Email not specified</span>
      <% else %>
        <%= contact.email %>
      <% end %>
    </div>
    <div class="col-lg-2">
      <% if contact.phone.blank? %>
      <span style="color: red;">Phone</span>
      <% else %>
        <%= contact.phone %>
      <% end %>
    </div>
    <div class="col-lg-3">
        <% if (contact.mailing_street &&
         contact.mailing_city &&
         contact.mailing_state &&
         contact.mailing_postal_code &&
         contact.mailing_country).blank? %>
        <span style="color: red;">
            Mailing address not specified
        </span>
    <% else %>

        <% if contact.mailing_street != "" %>
        <%= contact.mailing_street %>
        <% end %>
        <% if contact.mailing_city != "" %>
        <%= contact.mailing_city %>,
        <% end %>
        <% if contact.mailing_state != "" %>
        <%= contact.mailing_state %>,
        <% end %>
        <% if contact.mailing_postal_code != "" %>
        <%= contact.mailing_postal_code %>
        <% end %>
        <% if contact.mailing_country != "" %>
        <%= contact.mailing_country %>
        <% end %>

        <% end %>
    </div>
</div>
<% end %>

<% end %>
