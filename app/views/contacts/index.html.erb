<div class="row">
    <div class="col-lg-10">
        <h1>Contacts</h1>
        <p>1 item &middot updated minutes ago</p>
    </div>
    <div class="col-lg-2" style="padding-top: 25px;">
        <%= link_to 'New Contact', '#', class: "btn btn-default",
        data: {toggle: "modal", target: "#contactModalForm"} %>
    </div>
</div>

<%= render 'form' %>

<hr>

<% if @contacts.blank? %>
No contacts yet.
<% else %>
<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-3">
        <strong>Name</strong>
    </div>
    <div class="col-lg-3">
        <strong>Email</strong>
    </div>
    <div class="col-lg-3">
        <strong>Phone</strong>
    </div>
    <div class="col-lg-2">
      <strong>Action</strong>
    </div>
</div>
  <%= render @contacts %>
<% end %>
