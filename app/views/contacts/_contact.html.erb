<div id="notice-contact"></div>
<% if @subject.contacts.blank? %>
<div class="col-lg-12">
    No contacts added yet.
</div>
<% else %>
<% @subject.contacts.each do |contact| %>
<div class="col-lg-6" id="relatedContacts-<%= contact.id %>">
    <br>
    <div class="media">
        <div class="media-left">
          <% if contact.profile_pic.blank? %>
          <%= letter_avatar_tag(contact.name, 43 , class: "media-object") %>
          <% else %>
          <%= image_tag(contact.profile_pic.url(:small), class: "media-object") %>
          <% end %>
        </div>
        <div class="media-body">
            <h5 class="media-heading">
                <%= link_to contact.name, '#',
                data: {toggle: "modal", target: "#contactInfo-#{contact.id}"} %>
                <div class="pull-right">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="caret"></i>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to 'Show', '#', data: {toggle: "modal", target: "#contactInfo-#{contact.id}"}%></li>
                        <li><%= link_to 'Edit', '#',
                      data: {toggle: "modal", target: "#contact-#{contact.id}"} %></li>
                        <li>
                          <% if params[:controller] == "accounts" || params[:account_id] %>
                        <%= link_to 'Delete', account_contact_path(@subject, contact),
                          data: {confirm: "Are you sure?"},
                          method: :delete, remote: true %>
                          <% elsif params[:controller] == "opportunities" || params[:opportunity_id] %>
                          <%= link_to 'Delete', opportunity_contact_path(@subject, contact),
                          data: {confirm: "Are you sure?"},
                          method: :delete, remote: true %>
                          <% end %>
                        </li>

                    </ul>
                </div>
                <br>
                <small><%= contact.title %></small><br>
                <small><%= contact.department %></small>
            </h5>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <% unless contact.email.blank? %>
            <i class="fa fa-envelope"></i>
              <%= contact.email %>
            <br>
            <% end %>
            <% unless contact.phone.blank? %>
            <i class="fa fa-phone"></i>
                <%= contact.phone %>

            <% end %>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="contactInfo-<%= contact.id %>" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Contact Info</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-2">
                      <% if contact.profile_pic.blank? %>
                      <%= letter_avatar_tag(contact.name, 100, class: "img-responsive img-center")%>
                      <% else %>
                        <%= image_tag(contact.profile_pic.url(:medium), class: "img-responsive img-center")%>
                      <% end %>
                    </div>
                    <div class="col-lg-5">
                        <small>Name</small>
                        <h4>
                          <% if contact.name.blank? %>
                          <span style="color: red;">Not specified</span>
                          <% else %>
                          <%= contact.name %>
                          <% end %>
                        </h4>
                        <br>

                        <small>Position Title</small>
                        <h4><% if contact.title.blank? %>
                        <span style="color: red;">Not specified</span>
                        <% else %>
                        <%= contact.title %>
                        <% end %></h4>
                        <br>

                        <small>Department</small>
                        <h4><% if contact.department.blank? %>
                        <span style="color: red;">Not specified</span>
                        <% else %>
                        <%= contact.department %>
                        <% end %></h4>

                    </div>
                    <div class="col-lg-5">
                        <small>Mailing Address</small>
                        <h4>
                          <% if (contact.mailing_street == "" &&
                            contact.mailing_city == "" &&
                            contact.mailing_state == "" &&
                            contact.mailing_postal_code == "" &&
                            contact.mailing_country == "") %>
                          <span style="color: red;">
                              Not specified
                          </span>
                      <% else %>

                          <% if contact.mailing_street != "" %>
                          <%= contact.mailing_street %>
                          <% end %>
                          <% if contact.mailing_city != "" %>
                          <%= contact.mailing_city %>,
                          <% end %>
                          <% if contact.mailing_state != "" %>
                          <%= contact.mailing_state %>,
                          <% end %>
                          <% if contact.mailing_postal_code != "" %>
                          <%= contact.mailing_postal_code %>
                          <% end %>
                          <% if contact.mailing_country != "" %>
                          <%= contact.mailing_country %>
                          <% end %>

                          <% end %>
                        </h4>
                        <br>

                        <small>Phone</small>
                        <h4><% if contact.phone.blank? %>
                        <span style="color: red;">Not specified</span>
                        <% else %>
                        <%= contact.phone %>
                        <% end %></h4>
                        <br>

                        <small>Email</small>
                        <h4><% if contact.email.blank? %>
                        <span style="color: red;">Not specified</span>
                        <% else %>
                        <%= contact.email %>
                        <% end %></h4>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <%= link_to 'Close', '#', class: "btn btn-default", data: {dismiss: "modal"} %>
            </div>
        </div>
    </div>
</div>
<% end %>
<% end %>
